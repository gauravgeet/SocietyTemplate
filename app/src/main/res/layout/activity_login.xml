<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="#406280"
    tools:context="com.example.gaurav_pc.societytemplate.Login">

    <TextView
        android:id="@+id/textView_loginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="GTWalsheimProTrial"
        android:text="SIGN IN"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView_loginTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="#fff" />


    <EditText
        android:id="@+id/editText_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_logo"
        android:fontFamily="Cabin"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/app_edittext"
        android:drawableLeft="@drawable/username_30"
        android:hint="Username"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:fontFamily="Cabin"
        android:layout_below="@+id/editText_username"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/app_edittext"
        android:drawableLeft="@drawable/password_30"
        android:hint="Password"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/button_loginbtn"
        android:background="#165258"
        android:text="Login"
        android:textColor="#fff"
        android:fontFamily="Cabin"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:layout_below="@id/editText_password"
        />

    <TextView
        android:id="@+id/textView_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textColor="#fff"
        android:layout_alignBaseline="@+id/textView_forget_password"
        android:layout_alignBottom="@+id/textView_forget_password"
        android:layout_alignEnd="@+id/editText_password" />

    <TextView
        android:id="@+id/textView_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="forget password?"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText_password" />

</RelativeLayout>
