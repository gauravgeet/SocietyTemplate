<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_heading"
        android:text="Password Reset"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:fontFamily="GTWalsheimProTrial"
        android:textStyle="bold"/>

    <TextView
        android:text="To reset your password, enter the email address you userd to signin into Smart Society App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_note"
        android:fontFamily="GTWalsheimProTrial"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_heading"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="80dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/editText_reset_password"
        android:background="@drawable/custom_edittext"
        android:fontFamily="GTWalsheimProTrial"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:layout_below="@id/textView_note"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingBottom="10dp"
        android:drawableLeft="@drawable/username_black_30"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/editText_reset_password"
        android:background="#406280"
        android:text="Submit"
        android:fontFamily="GTWalsheimProTrial"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>
</RelativeLayout>